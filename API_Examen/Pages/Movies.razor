@page "/movies"
@inject MovieService MovieService

@using API_Examen.Models

<PageTitle>Films</PageTitle>

<h3>Films Populaires</h3>

@if (movies == null)
{
    <p>Chargement...</p>
}
else
{
    <div class="movies">
        @foreach (var movie in movies)
        {
            <div class="movie-card">
                <img src="@movie.FullPosterPath" alt="@movie.Title" />
                <h4>@movie.Title</h4>
                <p>@movie.Overview</p>
            </div>
        }
    </div>
}

@code {
    private List<Movie> movies;

    protected override async Task OnInitializedAsync()
    {
        movies = await MovieService.GetPopularMoviesAsync();
    }
}
